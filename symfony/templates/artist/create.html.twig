{% extends 'base.html.twig' %}

{% block title %}{{ title }} d'un Artiste{% endblock %}

{% block body %}
    <div class="form-container">
        <h1>{{ title }} d'un Artiste</h1>

        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
        <div class="form-group">
            <label for="{{ form.name.vars.id }}" class="form-label">Nom de l'artiste</label>
            {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="form-group">
            <label for="{{ form.description.vars.id }}" class="form-label">Description</label>
            {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="form-group">
            <label for="{{ form.image.vars.id }}" class="form-label">Image</label>
            {{ form_widget(form.image, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.image) }}
        </div>

        <button type="submit" class="btn btn-primary">{{ ButtonName }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}