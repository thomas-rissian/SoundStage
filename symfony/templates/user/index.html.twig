{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Mon profil</h1>

        <div class="user-profile-container">
            <div class="user-profile-card">
                <div class="user-profile-info">
                    <h2>Informations personnelles</h2>
                    <div class="info-row">
                        <div class="info-label">Nom d'utilisateur:</div>
                        <div class="info-value">{{ app.user.pseudo }}</div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">Email:</div>
                        <div class="info-value">{{ app.user.email }}</div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">Rôle:</div>
                        <div class="info-value">
                            {% if 'ROLE_ADMIN' in app.user.roles %}
                                Administrateur
                            {% else %}
                                Utilisateur
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="user-profile-actions">
                    <a href="{{ path('app_user_edit') }}" class="btn-primary">
                        <i class="fas fa-edit"></i> Modifier mon profil
                    </a>
                    <a href="{{ path('app_user_events') }}" class="btn-primary">
                        <i class="fas fa-calendar"></i> Mes événements
                    </a>
                    <a href="{{ path('app_user_delete') }}" class="delete-btn" onclick="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.')">
                        <i class="fas fa-trash"></i> Supprimer mon compte
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}