{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
    <div class="form-container">
        <h1>Modifier l'utilisateur</h1>

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email, {'attr': {'class': 'form-errors'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.password.first, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.password.first, {'attr': {'class': 'form-errors'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.password.second, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.password.second, {'attr': {'class': 'form-errors'}}) }}
        </div>

        <button type="submit" class="btn-primary">Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}