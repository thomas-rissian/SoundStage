{% extends 'base.html.twig' %}

{% block title %}Listes des évenements{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Evènements : <a href="{{ path('app_event_create') }}">Créer</a></h1>
        <ul>
            {% for event in events %}
                <li><a href = "{{ path('app_event_one', {id: event.id}) }}">{{ event.name }} </a>
                    | <a href="{{ path('app_event_edit', {id : event.id}) }}">Modifier</a>
                    | <a href="{{ path('app_event_delete',{id : event.id}) }}">Supprimer</a>
                {% if event.isRegister(app.user) %}
                    | <a href="{{ path('app_event_register',{id : event.id}) }}">Se désinscrire</a></li>
                    {% else %}
                        | <a href="{{ path('app_event_register',{id : event.id}) }}">S'inscrire</a></li>
                    {% endif %}
            {% endfor %}
        </ul>

    </div>
{% endblock %}
